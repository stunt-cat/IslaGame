    Dim mainImagesArray As String()



    Protected Sub mainImagesArrayPicker()

        Select Case gameType.Value

            Case "letters"

                If storedColour.Value = "blue" Then
                    mainImagesArray = lettersBlue

                ElseIf storedColour.Value = "red" Then
                    mainImagesArray = lettersRed

                ElseIf storedColour.Value = "green" Then
                    mainImagesArray = lettersGreen

                ElseIf storedColour.Value = "yellow" Then
                    mainImagesArray = lettersYellow

                ElseIf storedColour.Value = "purple" Then
                    mainImagesArray = lettersPurple

                ElseIf storedColour.Value = "black" Then
                    mainImagesArray = lettersBlack

                Else : storedColour.Value = "blue"

                End If

            Case "numbers"

                If storedColour.Value = "blue" Then
                    mainImagesArray = numbersBlue

                ElseIf storedColour.Value = "red" Then
                    mainImagesArray = numbersRed

                ElseIf storedColour.Value = "green" Then
                    mainImagesArray = numbersGreen

                ElseIf storedColour.Value = "yellow" Then
                    mainImagesArray = numbersYellow

                ElseIf storedColour.Value = "purple" Then
                    mainImagesArray = numbersPurple

                ElseIf storedColour.Value = "black" Then
                    mainImagesArray = numbersBlack

                Else : storedColour.Value = "blue"

                End If

            Case "spots"

                If storedColour.Value = "blue" Then
                    mainImagesArray = spotsBlue

                ElseIf storedColour.Value = "red" Then
                    mainImagesArray = spotsRed

                ElseIf storedColour.Value = "green" Then
                    mainImagesArray = spotsGreen

                ElseIf storedColour.Value = "yellow" Then
                    mainImagesArray = spotsYellow

                ElseIf storedColour.Value = "purple" Then
                    mainImagesArray = spotsPurple

                ElseIf storedColour.Value = "black" Then
                    mainImagesArray = spotsBlack

                Else : storedColour.Value = "blue"

                End If

        End Select

    End Sub


    Protected Sub imageRenderer(imageLocation As Integer)

        mainImagesArrayPicker()
        mainImage.ImageUrl = imagePath.Value & mainImagesArray(imageLocation)

    End Sub

    Protected Sub incrementImage_Click(sender As Object, e As System.EventArgs)

        mainImagesArrayPicker()

        Select Case random.Value

            Case "true"

                randomPicker()


            Case "false"

                If CInt(storedCurrentImage.Value) = (mainImagesArray.Length - 1) Then

                    imageRenderer(0)
                    storedCurrentImage.Value = "0"

                Else

                    imageRenderer(CInt(storedCurrentImage.Value) + 1)
                    storedCurrentImage.Value = CStr(CInt(storedCurrentImage.Value) + 1)

                End If

        End Select

    End Sub

    Protected Sub decrementImage_Click(sender As Object, e As System.EventArgs)

        mainImagesArrayPicker()

        Select Case random.Value

            Case "true"

                randomPicker()

            Case "false"

                If CInt(storedCurrentImage.Value) = 0 Then

                    imageRenderer(mainImagesArray.Length - 1)
                    storedCurrentImage.Value = CStr(mainImagesArray.Length - 1)

                Else

                    imageRenderer(CInt(storedCurrentImage.Value) - 1)
                    storedCurrentImage.Value = CStr(CInt(storedCurrentImage.Value) - 1)

                End If

        End Select

    End Sub

    Protected Sub randomPicker()

        ' Initialize the random-number generator.
        Randomize()

        ' Generate random value between 0 and array length. 
        Dim randomValue As Integer = CInt(Int((mainImagesArray.Length) * Rnd()))

        ' Use random value to select image from appropriate images folder
        imageRenderer(randomValue)
        storedCurrentImage.Value = randomValue


    End Sub

    Public Sub ChangeColour_Click(sender As Object, e As System.Web.UI.ImageClickEventArgs)

        mainImagesArrayPicker()

        Select Case storedColour.Value

            Case "blue"
                storedColour.Value = "purple"
                colourSelectorBlue.ImageUrl = "Images/squareBlue.jpg"
                colourSelectorPurple.ImageUrl = "Images/squarePurpleSelected.jpg"

            Case "purple"
                storedColour.Value = "green"
                colourSelectorPurple.ImageUrl = "Images/squarePurple.jpg"
                colourSelectorGreen.ImageUrl = "Images/squareGreenSelected.jpg"

            Case "green"
                storedColour.Value = "red"
                colourSelectorGreen.ImageUrl = "Images/squareGreen.jpg"
                colourSelectorRed.ImageUrl = "Images/squareRedSelected.jpg"

            Case "red"
                storedColour.Value = "yellow"
                colourSelectorRed.ImageUrl = "Images/squareRed.jpg"
                colourSelectorYellow.ImageUrl = "Images/squareYellowSelected.jpg"

            Case "yellow"
                storedColour.Value = "black"
                colourSelectorYellow.ImageUrl = "Images/squareYellow.jpg"
                colourSelectorBlack.ImageUrl = "Images/squareBlackSelected.jpg"

            Case "black"
                storedColour.Value = "blue"
                colourSelectorBlack.ImageUrl = "Images/squareBlack.jpg"
                colourSelectorBlue.ImageUrl = "Images/squareBlueSelected.jpg"

        End Select

        ' redraw current image in new colour
        imageRenderer(CInt(storedCurrentImage.Value))

    End Sub


    Protected Sub GameChange_Click(sender As Object, e As System.EventArgs)

        mainImagesArrayPicker()

        Select Case gameType.Value

            Case "letters"
                gameType.Value = "numbers"
                imagePath.Value = "~/Images/numbers/"
                storedCurrentImage.Value = "0"          ' This reset is required to avoid and arrayOutOfBounds error, because the array sizes are different between letters and numbers
                gameSelectorLetters.ImageUrl = "Images/gameSelectorLetters.png"
                gameSelectorNumbers.ImageUrl = "Images/gameSelectorNumbersSelected.png"

            Case "numbers"
                gameType.Value = "spots"
                imagePath.Value = "~/Images/spots/"
                storedCurrentImage.Value = "0"          ' This reset is required to avoid and arrayOutOfBounds error, because the array sizes are different between letters and numbers
                gameSelectorNumbers.ImageUrl = "Images/gameSelectorNumbers.png"
                gameSelectorSpots.ImageUrl = "Images/gameSelectorSpotsOrderedSelected.png"

            Case "spots"
                gameType.Value = "letters"
                imagePath.Value = "~/Images/letters/"
                storedCurrentImage.Value = "0"          ' This reset is required to avoid and arrayOutOfBounds error, because the array sizes are different between letters and numbers
                gameSelectorSpots.ImageUrl = "Images/gameSelectorSpotsOrdered.png"
                gameSelectorLetters.ImageUrl = "Images/gameSelectorLettersSelected.png"

        End Select

        ' redraw current image in new colour
        imageRenderer(CInt(storedCurrentImage.Value))

    End Sub

    Protected Sub RandomButton_Click(sender As Object, e As System.EventArgs) Handles RandomButton.Click

        Select Case random.Value

            Case "true"
                random.Value = "false"
                RandomButton.Text = "SEQ"

            Case "false"
                random.Value = "true"
                RandomButton.Text = "RND"

        End Select

    End Sub


